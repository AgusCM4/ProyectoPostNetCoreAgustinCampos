@model ProyectoPostNetCore.Models.Producto

@{
    ViewData["Title"] = "NuevoProducto";
    int idfab=int.Parse(ViewData["IDFABRICANTE"].ToString());
}

<h1>NuevoProducto</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdProducto" class="control-label"></label>
                <input asp-for="IdProducto" class="form-control" name="idproducto" />
                <span asp-validation-for="IdProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" name="nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" name="precio" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="IdFabricante" value="@idfab" class="form-control" name="idfabricante" type="hidden" />
            </div>
            <div class="form-group">
                <input type="submit" value="Crear Nuevo Producto" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListadoProductos" asp-controller="Tienda" asp-route-id="@idfab">Back to List</a>
</div>
